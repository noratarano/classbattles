<!doctype html>
<html lang="en">

	<head>
		<title>ClassBattles</title>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
		<link rel="shortcut icon" href="/images/favicon.ico">

		<!-- Loading Stylesheets -->
		<link href="/bootstrap/css/bootstrap.css" rel="stylesheet">
		<link href="/css/index.css" rel="stylesheet">
		<link href="/css/common.css" rel="stylesheet">

		<!-- HTML5 shim, for IE6-8 support of HTML5 elements. All other JS at the end of file. -->
		<!--[if lt IE 9]>
		  <script src="/js/lib/html5shiv.js"></script>
		  <script src="/js/lib/respond.min.js"></script>
		<![endif]-->
	</head>
	
	<body>
		<div class="container fill">
			
			<div class="row btn-group nav">
				<a href="/" class="btn btn-inverse nav-left">
						<span class="fui-arrow-left"></span>
				</a>
				<div class="btn btn-inverse disabled nav-middle">
					<span>ClassBattles</span>
				</div>
				<a href="#" class="btn btn-inverse nav-right hidden">
					<span class="fui-arrow-right"></span>
				</a>
			</div>
			
			<div class="row content">
			<h4>Sign up</h4>
	            <form class="login-form" class="form" role="form" method="get" action="/api/signup">
					{{#if error}}
					<div class="error">{{../error}}</div>
					{{/if}}
					<div class="form-group">
						<input type="email" class="form-control login-field" value="{{#if error}}{{../email}}{{/if}}" name="email" placeholder="email" id="login-email" required/>
						<label class="login-field-icon" for="login-email">@</label>
					</div>

					<div class="form-group">
						<input type="text" class="form-control login-field" value="{{#if error}}{{../username}}{{/if}}" name="username" placeholder="username" id="login-name" required />
						<label class="login-field-icon fui-user" for="login-name"></label>
					</div>

					<div class="form-group">
						<input type="password" class="form-control login-field" value="{{#if error}}{{password}}{{/if}}" name="password" placeholder="password" id="login-pass" required />
						<label class="login-field-icon fui-lock" for="login-pass"></label>
					</div>

					<button class="btn btn-primary btn-lg btn-block" type="submit">Sign up</button>
					<a class="login-link" href="/login">Already have an account? Log in.</a>
	            </form>
			</div>
			
			<div class="row menu-cont">
				<div class="btn btn-danger fui-list center-block menu-btn"></div>
			</div>
		</div>
		<!-- /.container -->
		
		<div class="menu-guide hidden">
			<div class="btn-group-vertical">
		        <a href="/" class="btn btn-sm btn-inverse btn-wide menu-welcome-btn">Welcome</a>
		        <a href="/login" class="btn btn-sm btn-inverse btn-wide menu-login-btn">Log in</a>
		        <a href="/about" class="btn btn-sm btn-inverse btn-wide menu-about-btn">About</a>
		    </div>
		</div>

		<!-- Load JS here for greater good =============================-->
		<script src="/js/lib/jquery-1.8.3.min.js"></script>
		<script src="/js/lib/jquery-ui-1.10.3.custom.min.js"></script>
		<script src="/js/lib/jquery.ui.touch-punch.min.js"></script>
		<script src="/js/lib/bootstrap.min.js"></script>
		<script src="/js/lib/bootstrap-select.js"></script>
		<script src="/js/lib/bootstrap-switch.js"></script>
		<script src="/js/lib/flatui-checkbox.js"></script>
		<script src="/js/lib/flatui-radio.js"></script>
		<script src="/js/lib/jquery.tagsinput.js"></script>
		<script src="/js/lib/jquery.placeholder.js"></script>
		
		<script src="/js/common.js"></script>
	</body>

</html>
