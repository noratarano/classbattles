<!doctype html>
<html>

	<head>
		<title>ClassBattles</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
		<meta name="apple-mobile-web-app-capable" content="yes" />
		<link rel="shortcut icon" href="/images/favicon.ico" />
	
		<!-- Loading Stylesheets -->
		<link href="/bootstrap/css/bootstrap.css" rel="stylesheet" />
		<link href="/css/common.css" rel="stylesheet" />
		<link href="/css/index.css" rel="stylesheet" />

		<!-- HTML5 shim, for IE6-8 support of HTML5 elements. All other JS at the end of file. -->
		<!--[if lt IE 9]>
		  <script src="/js/lib/html5shiv.js"></script>
		  <script src="/js/lib/respond.min.js"></script>
		<![endif]-->
	</head>
	
	<body>
		<div class="container fill">
			
			<!-- .content -->
			<div class="row content">
				<!-- .index-logo-cont -->
				<div class="row index-logo-cont center-block">
					<div class="index-logo center-block">
						<img src="/images/logo.jpg" width="95%" class="center-block">
					</div>
				</div>
				<!-- /.index-logo-cont -->
				<div class="row index-options-cont">
					<div class="index-options">
						<a class="btn btn-lg btn-block btn-info center-block" href="/login">Log in</a>
						<a class="btn btn-lg btn-block btn-primary center-block" href="/signup">Sign up</a>
					</div>
				</div>
			</div>
			<!-- /.content -->
			
			<!-- .nav -->
			<div class="row btn-group nav">
				<div class="btn btn-inverse nav-left hidden">
					<span class="fui-arrow-left"></span>
					<span>home</span>
				</div>
				<div class="btn btn-inverse disabled nav-middle">
					<span>ClassBattles</span>
				</div>
				<div class="btn btn-inverse nav-right hidden">
					<span class="fui-arrow-right"></span>
				</div>
			</div>
			<!-- /.nav -->
			
			<!-- .menu-cont -->
			<div class="row menu-cont">
				<div class="btn btn-danger fui-list center-block menu-btn"></div>
				<div class="menu-guide hidden">
					<div class="btn-group-vertical">
						<a href="/login" class="btn btn-sm btn-inverse btn-wide menu-login-btn">Log In</a>
						<a href="/signup" class="btn btn-sm btn-inverse btn-wide menu-signup-btn">Sign up</a>
				        <a href="/about" class="btn btn-sm btn-inverse btn-wide menu-about-btn">About</a>
				    </div>
				</div>
			</div>
			<!-- /.menu-cont -->
		</div>
		<!-- /.container -->
		
		{{#if b_test}}
		<script>
			var b_test = true;
		</script>
		{{else}}
		<script>
			var b_test = false;
		</script>
		{{/if}}

		<!-- Load JS here for greater good =============================-->
		<script src="/js/lib/jquery-1.8.3.min.js"></script>
		<script src="/js/lib/jquery-ui-1.10.3.custom.min.js"></script>
		<script src="/js/lib/jquery.ui.touch-punch.min.js"></script>
		<script src="/js/lib/bootstrap.min.js"></script>
		<script src="/js/lib/bootstrap-select.js"></script>
		<script src="/js/lib/bootstrap-switch.js"></script>
		<script src="/js/lib/flatui-checkbox.js"></script>
		<script src="/js/lib/flatui-radio.js"></script>
		<script src="/js/lib/jquery.tagsinput.js"></script>
		<script src="/js/lib/jquery.placeholder.js"></script>
		
		<script src="/js/common.js"></script>
	</body>

</html>
